	<insert id="addMenuquan">
		insert into menus_role values
		<foreach collection="mid" item="it" separator=",">
			(null,#{rid},#{it})
		</foreach>
	</insert>

	<select id="accountrole"  resultType="roLe">
		 SELECT r.* FROM role r, emp_role er, employee em
		WHERE r.rid = er.rid AND er.eid = em.eid
		AND em.`account` = #{account}
	</select>-->
</mapper>