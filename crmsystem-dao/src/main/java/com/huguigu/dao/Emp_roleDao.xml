<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huguigu.dao.Emp_roleDao">

	<delete id="deleEmprole" parameterType="int[]">
		<!-- delete from emp where empno in(7789,7790) -->
		<!-- forEach : 用来循环 collection : 用来指定循环的数据的类型 可以填的值有：array,list,map item
			: 循环中为每个循环的数据指定一个别名 index : 循环中循环的下标 open : 开始 close : 结束 separator : 数组中元素之间的分隔符 -->
		delete from emp_role where eid = #{eid} and rid in
		<foreach collection="rids" item="rid" index="no" open="("
				 separator="," close=")">
			#{rid}
		</foreach>
	</delete>

	<insert id="addEmprole">
		insert into emp_role values
		<foreach collection="rids" item="rid" separator=",">
			(null,#{eid},#{rid})
		</foreach>
	</insert>
</mapper>